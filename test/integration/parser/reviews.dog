#!/usr/bin/env dog

IMPORT COMMUNITY "gates" AS gates
IMPORT DATA "uist_submissions.json" AS uist_submissions

students = PEOPLE FROM gates

FOR EACH uist_submission IN uist_submissions DO
  students = PEOPLE FROM gates WHERE areas_of_expertise CONTAINS uist_submission.topic
  review = ASK 1 student VIA email TO review uist_submission
  reviewer = PERSON FROM review 
  advisor = PERSON FROM reviewer's gates' advisor
  validated_review = ASK advisor VIA email TO validate review
  NOTIFY uist_committee VIA email OF validated_review
END